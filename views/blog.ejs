<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="" width="300px">
            <p class="mt-3"><%= blog.body %></p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="100px" class="rounded-circle">
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <h1>Comments (<%= comments.length  %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </div>
                </form>


                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <div>
                            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px" class="rounded-circle"><%= blog.createdBy.fullName %>
                            <pre><%= comment.content %></pre>
                        </div>
                        <% }) %>
                </div>
        </div>
        <%- include('partials/scripts') %>
</body>

</html>